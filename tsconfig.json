{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/lib/**/*"],
  "exclude": ["dist/**/*", "node_modules/**/*"],
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"],
    "module": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "Bundler",
    "types": ["@testing-library/jest-dom", "vite/client"],
    "declarationMap": true,
    "declaration": true
  }
}
