{
    "name": "@bearcove/home-base",
    "version": "9.12.0",
    "license": "MIT",
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*",
        "src/lib",
        "!src/lib/**/*.test.*",
        "!src/lib/**/*.spec.*"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.js"
        },
        "./base.scss": "./src/lib/sass/base.scss"
    },
    "sideEffects": [
        "**/*.css"
    ],
    "description": "Base svelte and TypeScript code for home applications",
    "type": "module",
    "scripts": {
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "check": "svelte-check",
        "build": "vite build",
        "serve": "vite serve",
        "p": "pnpm package",
        "prepare": "svelte-package"
    },
    "author": "Amos Wenger <amos@bearcove.eu>",
    "dependencies": {
        "canvas-confetti": "^1.9.3",
        "debug": "^4.4.0",
        "diff": "^7.0.0",
        "dompurify": "^3.2.5",
        "he": "^1.2.0",
        "svelte": "^5.28.1",
        "svelte-icons-pack": "^3.1.3"
    },
    "devDependencies": {
        "@sveltejs/package": "^2.3.11",
        "@sveltejs/vite-plugin-svelte": "^5.0.3",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/svelte": "^5.2.7",
        "@tsconfig/svelte": "^5.0.4",
        "@types/canvas-confetti": "^1.9.0",
        "@types/debug": "^4.1.12",
        "@types/diff": "^7.0.2",
        "@types/he": "^1.2.3",
        "@types/node": "^22.14.1",
        "jsdom": "^26.1.0",
        "sass-embedded": "^1.86.3",
        "svelte-check": "^4.1.6",
        "typescript": "^5.8.3",
        "vite": "^6.3.2",
        "vite-plugin-top-level-await": "^1.5.0",
        "vite-plugin-wasm": "^3.4.1",
        "vitest": "^3.1.2"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@swc/core",
            "esbuild"
        ]
    },
    "publishConfig": {
        "access": "public"
    }
}
